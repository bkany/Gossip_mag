 <section class="jumbotron text-center">
        <div class="container">
        	<h1>Connecte toi !</h1>
        	
        	
        
    <%= form_tag url_for(action: 'create'), method: "post" do %>

      <%= label_tag 'Email' %>
      <%= text_field_tag 'email' %>
      <br /> <br />

      <%= label_tag 'Mot de passe' %>
      <%= text_field_tag 'password' %>
      <br /> <br />

      <%= submit_tag "Se connecter", class: "btn btn-default"%>

    <% end %>
        
</section>
